@model IEnumerable<HunterW_BugTracker.Models.TicketNotification>

<!-- Data Tables Stuff -->
<link href="~/Content/jquery.dataTables.css" rel="stylesheet" />
<script src="~/Scripts/jquery.min.js"></script>
<script src="~/Scripts/jquery.dataTables.min.js"></script>

<div class="main">
	<div class="main__scroll scrollbar-macosx">
		<div class="main__cont">
			<div class="row">
				<div class="col-md-12">
					<div class="panel panel-danger">
						<div class="panel-heading">
							<h3 class="panel-title">My Notifications</h3>
						</div>
						<div class="panel-body">
							<p>
								Below is a list of all of your notifications.
							</p>
						</div>
					</div>
				</div>
			</div>
			<div class="container-fluid half-padding">
				<table id="userindextable" class="table">
					<thead>
						<tr>
							<th>
								@Html.DisplayName("From")
							</th>
							<th>
								@Html.DisplayName("Received")
							</th>
							<th>
								@Html.DisplayNameFor(model => model.Subject)
							</th>
							<th>
								@Html.DisplayName("Details")
							</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>
									@Html.DisplayFor(modelItem => item.Sender.DisplayName)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Created)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Subject)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.NotificationBody)
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

