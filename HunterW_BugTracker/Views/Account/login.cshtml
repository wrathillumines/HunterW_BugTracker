@using HunterW_BugTracker.Models
@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<title>HW Error Tracking</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Right - Bootstrap Admin Template</title>
    <link rel="icon" type="image/png" href="~/Images/favicon.png">
    @*<link rel="apple-touch-icon-precomposed" href="img/apple-touch-favicon.png">*@
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900,900italic" rel="stylesheet" type="text/css">
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/awesome-bootstrap-checkbox.css" rel="stylesheet" />
    <link href="~/Content/right.lilac.css" rel="stylesheet" />
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
</head>
<body class="framed">
    <div class="wrapper">
        <div class="login">
			@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class="login__form", role = "form" }))
			{
				@Html.AntiForgeryToken()
				<div class="login__logo"></div>
				@Html.ValidationSummary(true, "", new { @class = "text-danger" })
				<div class="form-group">
					@Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
					@Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
				</div>
				<div class="form-group">
					@Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
					@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
				</div>
				<div class="checkbox login__remember">
					@Html.CheckBoxFor(m => m.RememberMe)
					@Html.LabelFor(m => m.RememberMe)
				</div>
				<div class="login__submit">
					<button class="btn btn-default" type="submit">Sign in</button>
					<input type="button" class="btn btn-default" value="Register" onclick="location.href='@Url.Action("Register", "Account")'" />
				</div>
				<br />
				<br />
				<div class="row">
					<div class="col-md-12 text-center">
						@Html.ActionLink("Forgot Password?", "ForgotPassword")
					</div>
				</div>
			}
        </div>
    </div>
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>